<!-- Sign up form -->
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1 class="text-center text-xl-start">ログイン</h1>
    <p class="text-center text-xl-start pb-3 mb-3">Already have an account? <a href="account-signin.html">Sign in here.</a></p>
    <%= form_with model: @user, local: true do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :nickname %>
              <%= f.text_field :nickname, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12 mb-4">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :grade_and_class %>
              <%= f.text_field :grade_and_class, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12 mb-4">
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="col-12 mb-4">
          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
      </div> <!-- 追加: row の閉じタグ -->
      <button type="submit" class="btn btn-primary shadow-primary btn-lg w-100">ログイン</button>
    <% end %>
  </div>
</div>